<?xml version="1.0" encoding="UTF-8" ?>

<!--
	Configure your directories here.

	Even if this is hard to read: use ${file.separator} as file separator instead of "/" or "\" if you want your script to be platform independent.

	(c) 2013-2015 by Ekkart Kleinod

	@author Ekkart Kleinod
-->

<project name="configuration" basedir=".">

	<!-- Git repositories -->

	<!--
		Path to the directory containing the refereemanager (my) git repositories.
		Declare this path relative to the build.xml or absolute in your file system (relative recommended).
		Original: "../../" = "..${file.separator}..${file.separator}"
	-->
	<property name="path:git" value="..${file.separator}..${file.separator}" />

	<!--
		Path to your refereemanager git repository.
		The declaration uses your git path, change if necessary.
		Original: "<git-path>refereemanager/" = "${path:git}refereemanager${file.separator}"
	-->
	<property name="path:git:refereemanager" value="${path:git}refereemanager${file.separator}" />

	<!--
		Path to your PHPExcelHelper git repository.
		The declaration uses your git path, change if necessary.
		Original: "<git-path>phpexcelhelper/" = "${path:git}phpexcelhelper${file.separator}"
	-->
	<property name="path:git:phpexcelhelper" value="${path:git}phpexcelhelper${file.separator}" />

	<!--
		Path to the directory containing the external git repositories.
		Declare this path relative to the build.xml or absolute in your file system (relative recommended).
		Original: "../../../external-git/" = "..${file.separator}..${file.separator}..${file.separator}external-git${file.separator}"
	-->
	<property name="path:external-git" value="..${file.separator}..${file.separator}..${file.separator}external-git${file.separator}" />

	<!--
		Path to your CakePHP git repository.
		The declaration uses your git path, change if necessary.
		Original: "<external-git-path>cakephp/" = "${path:external-git}cakephp${file.separator}"
	-->
	<property name="path:external-git:cakephp" value="${path:external-git}cakephp${file.separator}" />

	<!--
		Path to your phpMyAdmin git repository.
		The declaration uses your git path, change if necessary.
		Original: "<external-git-path>phpmyadmin/" = "${path:external-git}phpmyadmin${file.separator}"
	-->
	<property name="path:external-git:phpmyadmin" value="${path:external-git}phpmyadmin${file.separator}" />

	<!--
		Path to your PHPExcel git repository.
		The declaration uses your git path, change if necessary.
		Original: "<external-git-path>phpexcel/" = "${path:external-git}phpexcel${file.separator}"
	-->
	<property name="path:external-git:phpexcel" value="${path:external-git}phpexcel${file.separator}" />

	<!--
		Path to your TCPDF git repository.
		The declaration uses your git path, change if necessary.
		Original: "<external-git-path>tcpdf/" = "${path:git}tcpdf${file.separator}"
	-->
	<property name="path:external-git:tcpdf" value="${path:external-git}tcpdf${file.separator}" />



	<!-- Apache www home -->

	<!--
		Path to your chosen apache home directory.
		Declare this path relative to the build.xml or absolute in your file system (relative recommended).
		Original: "../../../apache/" = "..${file.separator}..${file.separator}..${file.separator}apache${file.separator}"
	-->
	<property name="path:apache" value="..${file.separator}..${file.separator}..${file.separator}apache${file.separator}" />

	<!--
		Path to your phpMyAdmin apache directory.
		The declaration uses your apache home path, change if necessary.
		Original: "<apache-path>phpmyadmin/" = "${path:apache}phpmyadmin${file.separator}"
	-->
	<property name="path:apache:phpmyadmin" value="${path:apache}phpmyadmin${file.separator}" />

	<!--
		Path to your refereemanager apache directory.
		The declaration uses your apache home path, change if necessary.
		Original: "<apache-path>refereemanager/" = "${path:apache}refereemanager${file.separator}"
	-->
	<property name="path:apache:refereemanager" value="${path:apache}refereemanager${file.separator}" />



</project>

<!-- EOF -->

