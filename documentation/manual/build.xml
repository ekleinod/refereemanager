<project name="manual" default="help" basedir=".">

	<property name="edgeutils:ant" value="../../submodules/edgeutils/ant" />
	<import file="${edgeutils:ant}/ant-commons.xml"/>

	<property name="id:xhtml" value="xhtml" />
	<property name="id:epub" value="epub" />

	<property name="dir:ducktype" value="ducktype" />
	<property name="dir:mallard" value="mallard" />
	<property name="dir:xhtml" value="${id:xhtml}" />
	<property name="dir:epub" value="${id:epub}" />

	<property name="ext:epub" value="${id:epub}" />
	<property name="ext:duck" value="duck" />
	<property name="ext:mallard" value="page" />
	<property name="ext:xhtml" value="${id:xhtml}" />

	<property name="file:epub" value="refman.${ext:epub}" />

	<target name="all" description="Generate all help types.">

		<antcall target="clearLog" />

		<antcall target="mallard" />
		<antcall target="fullxhtml" />
		<antcall target="epub" />

	</target>

	<target name="mallard" description="Generates mallard files.">

		<apply
				executable="ducktype"
				output="build.log"
				append="true"
				parallel="true">

			<arg value="-o" />
			<arg value="${dir:mallard}" />
			<srcfile />
			<fileset dir="${dir:ducktype}" includes="*.${ext:duck}" />

		</apply>

	</target>

	<target name="fullxhtml" description="Generate XHTML help and pretty print the output.">

		<antcall target="xhtml" />
		<antcall target="prettyprint" />

	</target>

	<target name="xhtml" description="Generates XHTML help.">

		<apply
				executable="yelp-build"
				output="build.log"
				append="true"
				parallel="true">

			<arg value="${id:xhtml}" />
			<arg value="-o" />
			<arg value="${dir:xhtml}" />
			<srcfile />
			<fileset dir="${dir:mallard}" includes="*.${ext:mallard}" />

		</apply>

	</target>

	<target name="prettyprint" description="Pretty prints XHTML files.">

		<apply
				executable="xmllint"
				output="build.log"
				append="true"
				force="true"
				parallel="false">

			<arg value="--pretty" />
			<arg value="1" />
			<arg value="--output" />
			<targetfile />
			<srcfile />
			<fileset dir="${dir:xhtml}" includes="*.${ext:xhtml}" />
			<mapper type="glob" from="*.${ext:xhtml}" to="${dir:xhtml}/*.${ext:xhtml}" />

		</apply>

	</target>

	<target name="epub" description="Generates epub help.">

		<apply
				executable="yelp-build"
				output="build.log"
				append="true"
				parallel="true">

			<arg value="${id:epub}" />
			<arg value="-o" />
			<arg value="${dir:epub}/${file:epub}" />
			<srcfile />
			<fileset dir="${dir:mallard}" includes="*.${ext:mallard}" />

		</apply>

	</target>

</project>
