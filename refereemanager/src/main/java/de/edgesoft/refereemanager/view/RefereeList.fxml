<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.RefereeListController">
   <children>
      <TabPane fx:id="tabPaneContent" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <tabs>
          <Tab fx:id="tabReferees" text="VSR">
               <content>
                  <VBox fx:id="boxReferees" spacing="10.0">
                     <children>
                        <TableView fx:id="tblReferees" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn fx:id="colRefereesID" text="ID" />
                            <TableColumn fx:id="colRefereesName" text="Name" />
                            <TableColumn fx:id="colRefereesFirstName" text="Vorname" />
                              <TableColumn fx:id="colRefereesTrainingLevel" text="Ausbildung" />
                              <TableColumn fx:id="colRefereesClub" text="Verein" />
                              <TableColumn fx:id="colRefereesBirthday" text="Geburtstag" />
                              <TableColumn fx:id="colRefereesUpdate" text="Fortbildung" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Label fx:id="lblRefereesFilter" text="Filter" />
                        <HBox spacing="5.0">
                           <children>
                              <CheckBox fx:id="chkRefereesActive" onAction="#handleFilterChange" text="Aktiv" />
                              <CheckBox fx:id="chkRefereesInactive" onAction="#handleFilterChange" text="Inaktiv" />
                              <CheckBox fx:id="chkRefereesEMail" onAction="#handleFilterChange" text="E-Mail" />
                              <CheckBox fx:id="chkRefereesLetterOnly" onAction="#handleFilterChange" text="Nur Brief" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabTrainees" text="Azubis">
               <content>
                  <VBox fx:id="boxTrainees" spacing="10.0">
                     <children>
                        <TableView fx:id="tblTrainees" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colTraineesID" text="ID" />
                              <TableColumn fx:id="colTraineesName" text="Name" />
                              <TableColumn fx:id="colTraineesFirstName" text="Vorname" />
                              <TableColumn fx:id="colTraineesClub" text="Verein" />
                              <TableColumn fx:id="colTraineesBirthday" text="Geburtstag" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabPeople" text="Personen">
               <content>
                  <VBox fx:id="boxPeople" spacing="10.0">
                     <children>
                        <TableView fx:id="tblPeople" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colPeopleID" text="ID" />
                              <TableColumn fx:id="colPeopleName" text="Name" />
                              <TableColumn fx:id="colPeopleFirstName" text="Vorname" />
                              <TableColumn fx:id="colPeopleBirthday" text="Geburtstag" />
                              <TableColumn fx:id="colPeopleRole" text="Rolle" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Label fx:id="lblPeopleFilter" text="Filter" />
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
