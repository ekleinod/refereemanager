<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="appPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.AppLayoutController">
	<top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<MenuBar>
					<menus>
						<Menu fx:id="mnuProgram" text="_Programm">
							<items>
								<MenuItem fx:id="mnuProgramPreferences" onAction="#handleProgramPreferences" text="E_instellungen">
									<accelerator>
										<KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem fx:id="mnuProgramQuit" onAction="#handleProgramExit" text="_Beenden">
									<accelerator>
										<KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu fx:id="mnuFile" text="_Datei">
							<items>
								<MenuItem fx:id="mnuFileNew" onAction="#handleFileNew" text="_Neu">
									<accelerator>
										<KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem fx:id="mnuFileOpen" onAction="#handleFileOpen" text="Ö_ffnen...">
									<accelerator>
										<KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem fx:id="mnuFileSave" onAction="#handleFileSave" text="_Speichern">
									<accelerator>
										<KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="mnuFileSaveAs" onAction="#handleFileSaveAs" text="Speichern _als...">
									<accelerator>
										<KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu fx:id="mnuPeople" text="_Menschen">
							<items>
								<MenuItem fx:id="mnuOverviewReferees" onAction="#handleOverviewReferees" text="_Schiriübersicht">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="mnuOverviewPeople" onAction="#handleOverviewPeople" text="_Personen">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="mnuOverviewTrainees" onAction="#handleOverviewTrainees" text="_Azubis">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem fx:id="mnuRefereeCommunication" onAction="#handleRefereeCommunication" text="Schiri_kommunikation">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu fx:id="mnuEvents" text="_Ereignisse" visible="false">
							<items>
								<MenuItem fx:id="mnuOverviewLeagueGames" onAction="#handleOverviewLeagueGames" text="_Ligaspiele">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="mnuOverviewTournaments" onAction="#handleOverviewTournaments" text="_Turniere">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<MenuItem fx:id="mnuOverviewOtherEvents" onAction="#handleOverviewOtherEvents" text="Sonstige Termine">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu fx:id="mnuThings" text="Din_ge">
							<items>
								<MenuItem fx:id="mnuOverviewClubs" onAction="#handleOverviewClubs" text="_Clubs" visible="false">
									<accelerator>
										<KeyCodeCombination alt="DOWN" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
								<SeparatorMenuItem />
								<MenuItem fx:id="mnuOverviewSexTypes" onAction="#handleOverviewSexTypes" text="_Geschlechter" />
								<MenuItem fx:id="mnuOverviewRoles" onAction="#handleOverviewRoles" text="_Rollen" />
								<MenuItem fx:id="mnuOverviewContactTypes" onAction="#handleOverviewContactTypes" text="_Kontaktarten" />
								<MenuItem fx:id="mnuOverviewStatusTypes" onAction="#handleOverviewStatusTypes" text="_Status" />
								<MenuItem fx:id="mnuOverviewTrainingLevelTypes" onAction="#handleOverviewTrainingLevelTypes" text="_Ausbildungsart" />
							</items>
						</Menu>
						<Menu fx:id="mnuStatistics" text="S_tatistik">
							<items>
								<MenuItem fx:id="mnuStatisticsData" onAction="#handleStatisticsData" text="_Daten">
									<accelerator>
										<KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
						<Menu fx:id="mnuHelp" text="_Hilfe">
							<items>
								<MenuItem fx:id="mnuHelpAbout" onAction="#handleHelpAbout" text="Ü_ber...">
									<accelerator>
										<KeyCodeCombination alt="UP" code="F1" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
									</accelerator>
								</MenuItem>
							</items>
						</Menu>
					</menus>
				</MenuBar>
				<ToolBar fx:id="barMain" prefHeight="40.0" prefWidth="200.0">
					<items>
						<Button fx:id="btnProgramQuit" onAction="#handleProgramExit" />
						<Separator prefWidth="10.0" />
						<Button fx:id="btnFileOpen" onAction="#handleFileOpen" />
						<Button fx:id="btnFileSave" onAction="#handleFileSave" />
						<Separator prefWidth="10.0" />
						<Button fx:id="btnOverviewReferees" onAction="#handleOverviewReferees" />
						<Button fx:id="btnOverviewPeople" onAction="#handleOverviewPeople" />
						<Button fx:id="btnOverviewTrainees" onAction="#handleOverviewTrainees" />
						<Separator prefWidth="10.0" />
						<Button fx:id="btnRefereeCommunication" onAction="#handleRefereeCommunication" />
						<Separator prefWidth="10.0" visible="false" managed="false" />
						<Button fx:id="btnOverviewLeagueGames" onAction="#handleOverviewLeagueGames" visible="false" managed="false" />
						<Button fx:id="btnOverviewTournaments" onAction="#handleOverviewTournaments" visible="false" managed="false" />
						<Button fx:id="btnOverviewOtherEvents" onAction="#handleOverviewOtherEvents" visible="false" managed="false" />
						<Separator prefWidth="10.0" visible="false" managed="false" />
						<Button fx:id="btnOverviewClubs" onAction="#handleOverviewClubs" visible="false" managed="false" />
						<Separator prefWidth="10.0" />
						<Button fx:id="btnStatisticsData" onAction="#handleStatisticsData" />
						<Separator prefWidth="10.0" />
						<Button fx:id="btnProgramPreferences" onAction="#handleProgramPreferences" />
					</items>
				</ToolBar>
			</children>
		</VBox>
	</top>
</BorderPane>
