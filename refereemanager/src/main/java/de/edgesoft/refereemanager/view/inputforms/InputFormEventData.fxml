<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.inputforms.InputFormEventDataController">
	<content>
		<GridPane alignment="TOP_CENTER" vgap="5.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="250.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
				<RowConstraints valignment="TOP" />
			</rowConstraints>
			<children>
				<Label text="ID" />
				<TextField fx:id="txtID" GridPane.columnIndex="1" />
				<Label text="Titel" GridPane.rowIndex="1" />
				<TextField fx:id="txtTitle" GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<Label text="Kurztitel" GridPane.rowIndex="2" />
				<TextField fx:id="txtShorttitle" GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<Label text="Ort" GridPane.rowIndex="3" />
				<AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="3">
					<children>
						<ComboBox fx:id="cboVenue" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="50.0" />
						<Button fx:id="btnVenueClear" onAction="#handleVenueClear" AnchorPane.rightAnchor="0.0">
							<tooltip>
								<Tooltip text="Auswahl entfernen" />
							</tooltip>
						</Button>
					</children>
				</AnchorPane>
				<Label text="Typ" GridPane.rowIndex="4" />
				<AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="4">
					<children>
						<ComboBox fx:id="cboType" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="50.0" />
						<Button fx:id="btnTypeClear" onAction="#handleTypeClear" AnchorPane.rightAnchor="0.0">
							<tooltip>
								<Tooltip text="Auswahl entfernen" />
							</tooltip>
						</Button>
					</children>
				</AnchorPane>
				<Separator />
				<fx:include fx:id="embeddedCRUDEventDay" source="../crud/ListCRUD.fxml" GridPane.columnIndex="1" GridPane.rowIndex="5" />
				<Separator />
				<Label text="Anmerkung" GridPane.rowIndex="6" />
				<TextArea fx:id="txtRemark" prefHeight="80.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
			</children>
		</GridPane>
	</content>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</ScrollPane>
