<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="boxList" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.lists.ListClubsController">
	<children>
		<TableView fx:id="tblData" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="colID" text="ID" />
				<TableColumn fx:id="colTitle" text="Titel" />
				<TableColumn fx:id="colShorttitle" text="Kurztitel" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
		<Label fx:id="lblFilter" text="Filter" />
		<HBox spacing="5.0">
			<children>
				<CheckBox fx:id="chkLocal" onAction="#handleFilterChange" text="Lokal" />
				<CheckBox fx:id="chkNonLocal" onAction="#handleFilterChange" text="AuswÃ¤rtig" />
			</children>
		</HBox>
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</VBox>
