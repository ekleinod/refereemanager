<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane vgap="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.inputforms.PartInputFormTrainingLevelController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
		<ColumnConstraints hgrow="SOMETIMES" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints valignment="TOP" />
		<RowConstraints valignment="TOP" />
		<RowConstraints valignment="TOP" />
		<RowConstraints valignment="TOP" />
	</rowConstraints>
	<children>
		<Label fx:id="lblSince" text="Seit" />
		<AnchorPane GridPane.columnIndex="1">
			<children>
				<DatePicker fx:id="pckSince" promptText="tt.mm.jjjj" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
			</children>
		</AnchorPane>
		<Label fx:id="lblTrainingLevelType" text="Stufe" GridPane.rowIndex="1" />
		<AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="1">
			<children>
				<ComboBox fx:id="cboTrainingLevelType" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="50.0" />
				<Button fx:id="btnTrainingLevelTypeClear" onAction="#handleTrainingLevelTypeClear" AnchorPane.rightAnchor="0.0">
					<tooltip>
						<Tooltip text="Auswahl entfernen" />
					</tooltip>
				</Button>
			</children>
		</AnchorPane>
		<fx:include fx:id="embeddedCRUDUpdate" styleClass="Update" source="../crud/ListCRUD.fxml" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	</children>
</GridPane>
