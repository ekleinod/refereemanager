<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.EventListController">
   <children>
      <TabPane fx:id="tabPaneContent" layoutX="200.0" layoutY="-100.0" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <tabs>
          <Tab fx:id="tabLeagueGames" text="Ligaspiele">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tblLeagueGames" prefHeight="200.0" prefWidth="350.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                            <TableColumn fx:id="colLeagueGameID" prefWidth="-1.0" text="ID" />
                            <TableColumn fx:id="colLeagueGameNumber" prefWidth="-1.0" text="Nummer" />
                            <TableColumn fx:id="colLeagueGameDate" prefWidth="-1.0" text="Datum" />
                            <TableColumn fx:id="colLeagueGameTime" prefWidth="-1.0" text="Zeit" />
                            <TableColumn fx:id="colLeagueGameLeague" prefWidth="-1.0" text="Liga" />
                            <TableColumn fx:id="colLeagueGameTeams" prefWidth="-1.0" text="Teams" />
                          </columns>
                          <columnResizePolicy>
                             <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                          </columnResizePolicy>
                        </TableView>
                        <Label fx:id="lblLeagueGameFilter" text="Filter" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="5.0">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
                           <children>
                              <CheckBox fx:id="chkLeagueGameLeague" mnemonicParsing="false" onAction="#handleFilterChange" text="Liga A" />
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="tabTournaments" text="Turniere">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tblTournaments" prefHeight="200.0" prefWidth="350.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columns>
                              <TableColumn fx:id="colTournamentID" prefWidth="-1.0" text="ID" />
                              <TableColumn fx:id="colTournamentDate" prefWidth="-1.0" text="Datum" />
                              <TableColumn fx:id="colTournamentTitle" prefWidth="-1.0" text="Titel" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="tabOtherEvents" text="Sonstige Termine">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tblOtherEvents" prefHeight="200.0" prefWidth="350.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columns>
                              <TableColumn fx:id="colOtherEventID" prefWidth="-1.0" text="ID" />
                              <TableColumn fx:id="colOtherEventDate" prefWidth="-1.0" text="Datum" />
                              <TableColumn fx:id="colOtherEventTime" prefWidth="-1.0" text="Zeit" />
                              <TableColumn fx:id="colOtherEventTitle" prefWidth="-1.0" text="Titel" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
