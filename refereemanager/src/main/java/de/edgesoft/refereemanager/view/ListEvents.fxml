<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.edgesoft.refereemanager.controller.ListEventsController">
   <children>
      <TabPane fx:id="tabPaneContent" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <tabs>
          <Tab fx:id="tabLeagueGames" text="Ligaspiele">
               <content>
                  <VBox fx:id="boxLeagueGames" spacing="10.0">
                     <children>
                        <TableView fx:id="tblLeagueGames" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colLeagueGameID" text="ID" />
                            <TableColumn fx:id="colLeagueGameNumber" text="Nummer" />
                            <TableColumn fx:id="colLeagueGameDate" text="Datum" />
                            <TableColumn fx:id="colLeagueGameTime" text="Zeit" />
                            <TableColumn fx:id="colLeagueGameLeague" text="Liga" />
                            <TableColumn fx:id="colLeagueGameTeams" text="Teams" />
                            <TableColumn fx:id="colLeagueGameRefereeReport" text="OSR-Bericht" />
                          </columns>
                          <columnResizePolicy>
                             <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                          </columnResizePolicy>
                        </TableView>
                        <Label fx:id="lblLeagueGameFilter" text="Filter" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabTournaments" text="Turniere">
               <content>
                  <VBox fx:id="boxTournaments" spacing="10.0">
                     <children>
                        <TableView fx:id="tblTournaments" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colTournamentID" text="ID" />
                              <TableColumn fx:id="colTournamentDateStart" text="Start" />
                              <TableColumn fx:id="colTournamentDateEnd" text="Ende" />
                              <TableColumn fx:id="colTournamentTitle" text="Titel" />
                              <TableColumn fx:id="colTournamentRefereeReport" text="OSR-Bericht" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabOtherEvents" text="Sonstige Termine">
               <content>
                  <VBox fx:id="boxOtherEvents" spacing="10.0">
                     <children>
                        <TableView fx:id="tblOtherEvents" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colOtherEventID" text="ID" />
                              <TableColumn fx:id="colOtherEventDateStart" text="Startdatum" />
                              <TableColumn fx:id="colOtherEventDateEnd" text="Enddatum" />
                              <TableColumn fx:id="colOtherEventTimeStart" text="Startzeit" />
                              <TableColumn fx:id="colOtherEventTimeEnd" text="Endzeit" />
                              <TableColumn fx:id="colOtherEventTitle" text="Titel" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
